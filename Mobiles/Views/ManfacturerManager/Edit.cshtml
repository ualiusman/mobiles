@model Mobiles.Models.Manufacturer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Manufacturer</legend>

        @Html.HiddenFor(model => model.ManufacturerId)

        <div class="editor-label">
            @Html.LabelFor(model => model.DistributorId, "Distributor")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DistributorId", String.Empty)
            @Html.ValidationMessageFor(model => model.DistributorId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.IsActive)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsActive)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
